generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Album {
  id          String   @id @default(cuid())
  title       String
  description String?
  slug        String   @unique
  coverUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  media       Media[]
}

model Media {
  id          String   @id @default(cuid())
  url         String
  type        String
  mimeType    String?
  width       Int?
  height      Int?
  blurDataUrl String?
  caption     String?
  albumId     String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  album       Album?   @relation(fields: [albumId], references: [id])
}
